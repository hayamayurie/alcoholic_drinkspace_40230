  <header>
    <div class ="title">
      <div class ="title-tag">alcohol record space</div>
  </div>

<div class ="singup">
<h2 class="login">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %> <br /> </div>
    <%= f.text_field :nickname, autofocus: true, size: "30", maxlength: "10" %>

  <div class="field">
    <%= f.label :email %><br /> </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,size: "30"%>

  <div class="field">
    <%= f.label :password %></div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上英数字を混ぜる)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",size: "30" %>

  <div class="field">
    <%= f.label :password_confirmation %><br /> </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",size: "30" %>

  <div class="actions">
    <%= f.submit "登録", class:"sell-btn",id:"Button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
